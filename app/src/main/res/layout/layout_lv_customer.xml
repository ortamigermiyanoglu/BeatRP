<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rowCustomer"
    android:onClick="CustomerDetail">

    <LinearLayout
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/cNamePartLayout"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="left"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="10dp"
                android:textColor="#212F3D"
                android:id="@+id/lblCustomerNameList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/cBalancePartLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:layout_marginRight="5dp"
                android:textColor="#212F3D"
                android:id="@+id/lblCustomerBalanceList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>