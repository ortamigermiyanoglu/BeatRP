<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
            android:shape="rectangle">
            <stroke android:width="1dip" android:color="@android:color/holo_blue_dark" />
            <solid android:color="@android:color/holo_blue_dark" />
            <corners android:radius="1dip"/>
        </shape>
    </item>
    <item android:right="1dp" android:left="1dp" android:bottom="1dp" android:top="1dp">
        <shape
            android:shape="rectangle">
            <stroke android:width="0.5dip" android:color="@android:color/holo_blue_dark" />
            <solid android:color="#1F618D"/>
            <corners android:radius="2dip"/>
        </shape>
    </item>
</layer-list>